<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F0FF"
    tools:context=".SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingRight="5dp"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                 PeriWinkle"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:fontFamily="@font/fontlight"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="설정 완료"
            android:backgroundTint="#E8F0FF"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/fontlight"
            android:id="@+id/plusButton"
            android:onClick="complete"
            android:background="@drawable/round_background"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_background"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:fontFamily="@font/fontlight"
            android:layout_weight="1"
            android:text="인접 기준 거리"
            />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/meter_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_weight="5"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/seekbar2"
            android:max='100' />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:paddingRight="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meter_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="  m  "
                    android:fontFamily="@font/fontlight"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_background"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:fontFamily="@font/fontlight"
            android:layout_weight="1"
            android:text="기본 카메라 줌"
            />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/zoom_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_weight="5"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/seekbar2"
            android:max='20' />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:paddingRight="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="+"
                    android:fontFamily="@font/fontlight"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zoom_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="  m  "
                    android:fontFamily="@font/fontlight"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_search_24"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>